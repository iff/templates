%% Full frame graphic with title (keep aspect ratio and use slide height)
\newcommand {\titledfullframegraphicH}[2] {
    {
        \usebackgroundtemplate{\includegraphics[height=\paperheight,keepaspectratio]{#2}}
        \begin{frame}
            \begin{tikzpicture}[overlay]
                \draw[fill=black,color=black,opacity=0.5] (-2.0, 3.0) rectangle
                (12.5, 5.0);
                \draw (11.7, 3.5) node[left] (t1) {\Huge \textbf{#1}};
            \end{tikzpicture}
        \end{frame}
    }
}


